<Window x:Class="Milosevic_Chat_Client.Chat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milosevic_Chat_Client"
        mc:Ignorable="d"
        Title="Chat" Height="450" Width="575">
    <Grid>
        <ListBox x:Name="lst_chat" HorizontalAlignment="Left" Height="305" Margin="10,65,0,0" VerticalAlignment="Top" Width="380"/>
        <TextBox x:Name="txt_messaggio" HorizontalAlignment="Left" Height="30" Margin="10,380,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" FontSize="14"/>
        <Button x:Name="btn_invia" Content="Invia" HorizontalAlignment="Left" Margin="395,380,0,0" VerticalAlignment="Top" Width="75" Height="30" FontSize="15" Click="btn_invia_Click"/>
        <Image HorizontalAlignment="Left" Height="40" Margin="200,10,0,0" VerticalAlignment="Top" Width="135" Source="logo_small.png"/>
        <Button x:Name="btn_disconnetti" Content="Disconnetti" HorizontalAlignment="Left" Margin="475,380,0,0" VerticalAlignment="Top" Width="80" Height="30" FontSize="15" Click="btn_disconnetti_Click"/>

    </Grid>
</Window>
